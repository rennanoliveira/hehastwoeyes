<div class="content-card-header">
  <h3>Create a new group</h3>
</div>
<div class="content-card-content">
  <div class="info-box">
    <%= form_for @group do |f| %>
      <div class="form-group">
        <%= f.label :name %>*
        <%= f.text_field :name, class: 'form-control', placeholder: 'Ex: Family Secret Santa 2015' %>
      </div>
        <div class="form-group">
          <%= f.label :description %>
          <%= f.text_area :description,
                           class: 'form-control',
                           placeholder: 'Tell people things like: what the present price-range should be. Is it a books-only secret santa? This is the place to say it!' %>
        </div>
      <button class="btn btn-primary" type="submit">Create group and invite friends!</button>
    <% end %>
  </div>
</div>