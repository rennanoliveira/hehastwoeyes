<!-- Main -->
<header id="top" class="landing-header">
  <div class="snow"></div>
  <div class="text-vertical-center landing-msg">
    <!-- error messages -->
    <% flash.each do |key, value| %>
        <div class="alert-fix alert alert-<%= alert_type(key) %> fade in" role="alert">
          <%= value %>
        </div>
    <% end %>
    <h1>The Secret Santa Project</h1>

    <br>
    <%= link_to 'Come on in',
                '#',
                class: 'btn btn-danger btn-lg',
                data: {toggle: 'modal', target: '#myModal'} %>

    <a href="#about" class="btn btn-light btn-lg">What is this?</a>
  </div>
</header>

<!-- Footer -->
<footer id="about" class="footer">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2>
          Secret santa goes <%= link_to 'open source!', 'https://github.com/rennanoliveira/hehastwoeyes' %>
        </h2>

        <p class="lead">Developed in a few nights of insomnia by
          <%= link_to 'Rennan Oliveira', 'https://www.linkedin.com/in/rennanoliveira' %>
          .</p>
          <p>Photo credit: <a href="https://www.flickr.com/photos/hills_alive/11492278626/">The hills are alive*</a> /
          <a href="http://visualhunt.com">VisualHunt</a> / <a href="http://creativecommons.org/licenses/by/2.0/">CC BY</a></p>
      </div>
    </div>
    <!-- /.row -->
  </div>
  <!-- /.container -->
</footer>

<!-- Modal -->
<%= render partial: 'modal' %>
